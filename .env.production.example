# Production Environment Variables Template
# Copy this file to .env.production and fill in your production values
# DO NOT commit this file with real values to version control

# Database connection (Production PostgreSQL)
DATABASE_URL="postgresql://prod_user:STRONG_PASSWORD@prod-db-host:5432/medical_registry_prod?sslmode=require"

# Server configuration
PORT=3000
NODE_ENV=production

# Keycloak configuration (Production)
KEYCLOAK_BASE_URL=https://auth.yourcompany.com
KEYCLOAK_REALM=medical-registry-prod
KEYCLOAK_CLIENT_ID=medical-registry-api
KEYCLOAK_CLIENT_SECRET=your-very-secure-production-client-secret

# Admin credentials (for initial setup only - disable after setup)
ADMIN_USERNAME=admin@yourcompany.com
ADMIN_PASSWORD=very-secure-admin-password

# CORS configuration (specific production domains only)
CORS_ORIGINS=https://yourapp.com,https://www.yourapp.com

# JWT Token settings (Production)
JWT_EXPIRES_IN=8h
JWT_SECRET=your-very-long-secure-jwt-secret-key-at-least-32-characters

# File upload settings
MAX_FILE_SIZE=5MB
UPLOAD_PATH=/app/uploads

# Logging (production should use info or warn)
LOG_LEVEL=info

# Additional production variables
# Add any other production-specific configuration here
